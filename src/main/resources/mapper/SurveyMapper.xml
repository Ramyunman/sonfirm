<!-- 차트 불러오기1 question, reponse_item 조인 -->
<select id="showChart" parameterType="Integer" resultType="Question">
	SELECT *
	FROM question ta
	LEFT JOIN response_item tb ON ta.q_idx = tb.q_idx
	WHERE ta.s_idx = #{sIdx};
</select>

<!-- 차트 불러오기2 response, reponse_item 조인 -->
<select id="getResponsesBySIdx" parameterType="Integer" resultType="ResponseItem">
	SELECT *
	FROM response ta
	LEFT JOIN response_item tb ON ta.r_idx = tb.r_idx
	WHERE ta.s_idx = #{sIdx};
</select>
</mapper>

